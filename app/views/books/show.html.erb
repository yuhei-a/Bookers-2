      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= @users.introduction %></th>
      </tr>
</table>

<div class='row'>
  <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26739" href="/users/26739/edit"></a>
</div>
    <h2>New book</h2>
    <%= form_with model:@book, url:'/books',local:true do |f| %>
  <div class="field row">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions row">
    <%= f.submit 'Create Book' %>
  </div>
    <% end %>
  </div>

  <div class='col-xs-9'>
		<h2>Book detail</h2>
		<table class='table'>
		  <tr>
        <td>
          <%= attachment_image_tag @users, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%><br>
          <% @user.name %>
        </td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <% end %>

          <td><a class="btn-sm btn-success edit_book_41710" href="/books/41710/edit">Edit</a></td>
          <td><a data-confirm="本当に消しますか？" class="btn-sm btn-danger destroy_book_41710" rel="nofollow" data-method="delete" href="/books/41710">Destroy</a></td>
      </tr>
    </table>

  </div>
</div>
