<body>
    <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span>Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Home', user_path(current_user.id) %></li>
          <li><%= link_to 'Users', users_path %></li>
          <li><%= link_to 'Books', books_path %></li>
          <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
      </ul>
    </nav>
  </div>
</header>

    <div class='body'>
      <div class='container'>


        <p id="notice"></p>



<div class='row'>
  <div class='col-xs-3'>
    <h2>User info</h2>

    <table class='table'>
      <tr><%= attachment_image_tag @users, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></tr>
      <tr>
    	  <th>name</th>
    	  <th><%= @users.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= @users.introduction %></th>
      </tr>
</table>

<div class='row'>
  <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26739" href="/users/26739/edit"></a>
</div>

    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
  <div class="field row">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions row">
    <%= f.submit 'Create Book' %>
  </div>
      <% end %>
  </div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <% @books.each do |book| %>
  <tbody>
      <tr>
        <td><a href="/users/26734"></a></td>
        <td><%= attachment_image_tag @users, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
  </tbody>
</table>
  </div>
</div>

      </div>
    </div>
    <footer>
  <div class='container'>
  	<div class='row'>
    	<div class='col-xs-3 col-xs-offset-9'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>

  </body>
