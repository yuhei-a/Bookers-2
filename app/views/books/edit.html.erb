<div class='body'>
  <div class='container'>
        <div class='row'>
	<div class='col-md-6 col-md-offset-3'>
		<h1>Editing Book</h1>
  <!-- <div class='col-md-3 col-md-offset-3'>
  </div> -->

    <% if @book.errors.any? %>
     <%= @book.errors.count %>
     <% @book.errors.full_messages.each do |book| %>
       <%= book %>
     <% end %>
    <% end %>

		<%= form_with model:@book, local:true do |f| %>
  <div class="field row">
    <label for="book_title">Title</label><br />
    <%= f.text_field :title %>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label><br />
    <%= f.text_area :body %>
  </div>

  <div class="actions row">
   <%= f.submit 'Update Book' %>
  </div>
  <% end %>

		<%= link_to 'show', book_path(@book) %>
		<%= link_to 'Back', books_path %>
    </div>
    <div class='col-md-3'></div>
</div>
      </div>
    </div>
    <footer>
  <div class='container'>
  	<div class='row'>
    	<div class='col-xs-3 col-xs-offset-9'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>

  </body>
</html>