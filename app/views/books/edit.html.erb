    <% if @book.errors.any? %>
     <%= @book.errors.count %>
     <% @book.errors.full_messages.each do |book| %><p>"error"</p>
       <%= book %>
     <% end %>
    <% end %>

		<%= form_with model:@book, local:true do |f| %>
  <div class="field row">
    <label for="book_title">Title</label><br />
    <%= f.text_field :title, :size => "81*81"%>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label><br />
    <%= f.text_area :body, :size => "80*80" %>
  </div>

  <div class="actions row">
   <%= f.submit 'Update Book',class:"btn btn-primary btn-block" %>
  </div>
  <% end %>

		<%= link_to 'Show', book_path(@book) %>
		<%= link_to 'Back', books_path %>
