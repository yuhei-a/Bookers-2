        <p id="notice"></p>



<div class='row'>
  <div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></tr>
      <tr>
    	  <th>name</th>
    	  <th><%= @user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= @user.introduction %></th>
      </tr>
</table>

<div class='row'>
  <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_26739" href="/users/26739/edit"></a>
</div>

    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
  <div class="field row">
    <label for="book_title">Title</label>
   <%= f.text_field :title %>
  </div>

  <div class="field row">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions row">
    <%= f.submit 'Create Book' %>
  </div>
    <% end %>
  </div>

  <div class='col-xs-9'>
    <h2>Users</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
     <% @users.each do |user| %>
  <tbody>
      <tr>
        <td><a href="/users/26734"></a></td>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
        <td><%= user.profile_image_id %></td>
        <td><%= user.name %></td>
      </tr>
      <% end %>
  </tbody>
</table>
  </div>
</div>

